<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            size_hint_y: 0.8
            id: camera
            resolution: (1920, 1080)
            play: False
            opacity: 0
        Button:
            size_hint_y: 0.1
            id: camera_button
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Button:
            size_hint_y: 0.1
            text: 'Capture'
            on_press: root.capture()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            size_hint_y: 0.7
            id: img
        Button:
            size_hint_y: 0.1
            text: 'Create Sharable Link'
            on_press: root.create_link()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Label:
            size_hint_y: 0.1
            id: link
            text: ''
        GridLayout:
            cols: 3
            spacing: 10
            size_hint_y: 0.1
            Button:
                id: copy_button
                text: 'Copy Link'
                on_press: root.copy_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
                size_hint_x: 0.45
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
                size_hint_x: 0.45
            Button:
                text: 'Back'
                size_hint_x: 0.1
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
                on_press: root.manager.current = 'camera_screen'


<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.3, 0.1, 0.8, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'