<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            size_hint_y: 0.8
            play: False
        Button:
            id: camera_button
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
        Button:
            text: 'Capture'
            size_hint_y: 0.1

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'